{
  "name": "Differer",
  "short_name": "DIFF",
  "description": "A Firefox extension for rendering pretty diffs and patches created by commands like git format-patch.",
  "permissions": ["<all_urls>", "tabs"],
  "icons": {
    "48": "icons/patch-ext-48.png",
    "128": "icons/patch-ext-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "browser_action": {
    "default-icons": {
      "48": "icons/patch-ext-48.png",
      "128": "icons/patch-ext-128.png"
    },
    "theme_icons": [
      {
        "dark": "icons/patch-ext-48.png",
        "light": "icons/patch-ext-48-light.png",
        "size": 48
      },
      {
        "dark": "icons/patch-ext-128.png",
        "light": "icons/patch-ext-128-light.png",
        "size": 128
      }
    ]
  },
  "version": "2.0.1",
  "manifest_version": 2
}
