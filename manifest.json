{
  "name": "Differer",
  "short_name": "DIFF",
  "description": "A Firefox extension for rendering pretty diffs and patches created by commands like git format-patch.",
  "permissions": ["<all_urls>", "tabs", "storage"],
  "icons": {
    "48": "icons/patch-ext-48.png",
    "128": "icons/patch-ext-128.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "dist/options.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "browser_action": {
    "theme_icons": [
      {
        "dark": "icons/patch-ext-48.png",
        "light": "icons/patch-ext-48-light.png",
        "size": 48
      },
      {
        "dark": "icons/patch-ext-128.png",
        "light": "icons/patch-ext-128-light.png",
        "size": 128
      }
    ]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "diff-patch@ghabayeb.com",
      "strict_min_version": "57.0a1"
    }
  },
  "version": "2.0.1",
  "manifest_version": 2
}
